# 全局配置
Host *
    ServerAliveInterval 60
    ServerAliveCountMax 3
    TCPKeepAlive yes
    ControlMaster auto
    ControlPath ~/.ssh/sockets/%C
    ControlPersist 10m

# OpenMediaVault
Host omv
    HostName 192.168.100.20
    User leen

# TrueNAS
Host tnas
    HostName 192.168.100.21
    User leen

# ZMK 41 (Keyboard/Controller)
Host zmk41
    HostName 192.168.100.31
    User leen

# 阿里云堡垒机 (Jumper)
Host jumper
    HostName dmtonhcvgh-public.bastionhost.aliyuncs.com
    Port 60022
    User leen
    ServerAliveInterval 60

# 阿里云服务器 (通过堡垒机跳板)
Host aliyun
    HostName 10.10.10.250
    User leen
    Port 22
    ProxyJump jumper
    ServerAliveInterval 60
